<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FmFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/fragment_fm_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="3dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/search_view" />

        <LinearLayout
            android:id="@+id/fragment_fm_layou_tregion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/fragment_fm_tv_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="广西"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_margin="5dp"
                android:src="@drawable/sl" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/fragment_fm_refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <GridView
            android:id="@+id/fragment_fm_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:verticalSpacing="20dp">

        </GridView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include
        android:id="@+id/no_network"
        layout="@layout/no_network" />

</LinearLayout>
