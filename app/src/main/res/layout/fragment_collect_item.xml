<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/fragment_collect_item_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_collect_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="970女主播"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fragment_collect_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="5"
            android:maxLines="1"
            android:text="970"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_collect_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐类"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/play" />

            <TextView
                android:id="@+id/fragment_collect_item_tv_audience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="320000"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginRight="5dp"
        android:background="@drawable/more" />
</FrameLayout>
